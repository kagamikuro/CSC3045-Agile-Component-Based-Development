<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
        PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">

<generatorConfiguration>

    <context id="DB2Tables" targetRuntime="MyBatis3">
        <jdbcConnection driverClass="com.mysql.jdbc.Driver"
                        connectionURL="jdbc:mysql://localhost:3306/agile?serverTimezone=PRC"
                        userId="root"
                        password="backspace">
        </jdbcConnection>

        <javaTypeResolver >
            <property name="forceBigDecimals" value="false" />
        </javaTypeResolver>

        <javaModelGenerator targetPackage="uk.ac.qub.agile.entry"
                            targetProject=".\src\main\java">
            <property name="enableSubPackages" value="true" />
            <property name="trimStrings" value="true" />
        </javaModelGenerator>

        <sqlMapGenerator targetPackage="mapper"
                         targetProject=".\src\main\resources">
            <property name="enableSubPackages" value="true" />
        </sqlMapGenerator>

        <javaClientGenerator type="XMLMAPPER"
                             targetPackage="uk.ac.qub.agile.dao"
                             targetProject=".\src\main\java">
            <property name="enableSubPackages" value="true" />
        </javaClientGenerator>


        <table tableName="project" domainObjectName="Project"></table>
        <table tableName="role" domainObjectName="Role"></table>
        <table tableName="sprint" domainObjectName="Sprint"></table>
        <table tableName="sprintteam" domainObjectName="SprintTeam"></table>
        <table tableName="task" domainObjectName="Task"></table>
        <table tableName="user" domainObjectName="User"></table>
        <table tableName="userstory" domainObjectName="UserStory"></table>




    </context>
</generatorConfiguration>
